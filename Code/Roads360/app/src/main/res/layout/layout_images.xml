<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
           android:background="#d1e0dd"
           android:layout_marginTop="20dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/loc"/>

               <TextView
                   android:id="@+id/showLocation"
                   android:text="Location"
                   android:textColor="#000"
                   android:layout_gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"/>

           </LinearLayout>


           <ImageView
               android:id="@+id/showImage"
               android:layout_width="match_parent"
               android:layout_height="300dp" />

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <ImageView
                   android:background="@drawable/alarm"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:textColor="#000"
                   android:id="@+id/showTime"
                   android:text="Time"
                   android:layout_gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingRight="130dp"/>
               <ImageView
                   android:background="@drawable/calendar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:textColor="#000"
                   android:id="@+id/showDate"
                   android:text="Date"
                   android:layout_gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </LinearLayout>

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:textColor="#000"
                   android:text="Average Traffic Situation Daily :"
                   android:textStyle="italic"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:textColor="#000"
                   android:id="@+id/showavgtrafficSituation"
                   android:paddingLeft="20dp"
                   android:text="Traffic"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

           </LinearLayout>
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:textColor="#000"
                   android:text="Heavy Traffic Hours :"
                   android:textStyle="italic"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:textColor="#000"
                   android:id="@+id/showTraficHour"
                   android:paddingLeft="20dp"
                   android:text="Traffic Hour"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

           </LinearLayout>
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:textColor="#000"
                   android:text="More Traffic :"
                   android:textStyle="italic"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:textColor="#000"
                   android:id="@+id/showTraficDay"
                   android:paddingLeft="20dp"
                   android:text="Traffic Day"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

           </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
           <TextView
               android:textStyle="italic"
               android:textColor="#000"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Details Location:"/>
            <TextView
                android:id="@+id/showDetailsLocation"
                android:text="Details Location"
                android:paddingLeft="20dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


       </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>